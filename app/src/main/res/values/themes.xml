<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>
    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">#000000</item>
    </style>
    
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#4C5F9D</item>
        <item name="android:headerBackground">#102262</item>
        <item name="android:calendarTextColor">#ffffff</item>
        <item name="colorControlActivated">#102262</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">#102262</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:windowBackground">#4C5F9D</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">#ffffff</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">#ffffff</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">#ffffff</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">#ffffff</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">#ffffff</item>
    </style>

    <style name="AppCompatAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="textColorAlertDialogListItem">#ffffff</item>
        <item name="android:textColorAlertDialogListItem">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">#4C5F9D</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

        <!-- Base application theme. -->
    <style name="Theme.MovieProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        타이틀 바 없애기-->
<!--        <item name="windowNoTitle">true</item>-->
<!--        배경색 주기-->
        <item name="android:windowBackground">@color/purple_500</item>
        <item name="android:textColor">#ffffff</item>

        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

    </style>

</resources>